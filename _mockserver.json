// _mockserver.json - mock 接口的配置文件
// 可以在这个 JSON 中使用注释, 方便对接口做一些说明
//
// The minimal _mockserver.json, JSON 必须包含如下信息, 其他字段均是可选字段
// {
//     "api": {
//         "GET /api/users": {
//             "response": {}
//         }
//     }
// }
{
    // Visual Stuido Code 支持通过 JSON schema 来验证 JSON 文件的格式并给予提示信息
    // To understand the structure of JSON files, we use JSON schemas
    // https://code.visualstudio.com/Docs/languages/json#_json-schemas-settings
    "$schema": "http://rawgit.com/ufologist/puer-mock/master/_mockserver-schema.json",

    // 项目的介绍信息
    "info": {
        "summary": "xxx 项目接口文档",
        "description": "如此高大上的接口文档 Powered by puer-mock"
    },

    // 接口列表
    "api": {
        // 首页api
        "GET /api/home": {
            "info": {
                "summary": "首页api",
                "module": "首页api",
                "description": "",
                "author": "Joseph"
            },
            "response": {
                "menus": [
                    {
                        "name": "导航一",
                        "catID": "@increment"
                    },
                    {
                        "name": "导航二",
                        "catID": "@increment"
                    },
                    {
                        "name": "导航三",
                        "catID": "@increment"
                    },
                    {
                        "name": "导航四",
                        "catID": "@increment"
                    },
                    {
                        "name": "导航五",
                        "submenus": [
                            {
                                "name": "子导航1",
                                "catID": "@increment"
                            },
                            {
                                "name": "子导航2",
                                "catID": "@increment"
                            },
                            {
                                "name": "子导航3",
                                "catID": "@increment"
                            },
                            {
                                "name": "子导航4",
                                "catID": "@increment"
                            }
                        ]
                    }
                ],
                "banners": [
                    {
                        "src": "@image('1070x320', '#50B347', '#000', 'Mock-1.js')",
                        "catID": "@increment",
                        "uID": "@increment"
                    },
                    {
                        "src": "@image('1070x320', '#ffc107', '#f00', 'Mock-2.js')",
                        "catID": "@increment",
                        "uID": "@increment"
                    },
                    {
                        "src": "@image('1070x320', '#03a9f4', '#fff', 'Mock-3.js')",
                        "catID": "@increment"
                    }
                ],
                "sideMenus": [
                    {
                        "name": "侧栏导航一",
                        "catID": "@increment"
                    },
                    {
                        "name": "侧栏导航二",
                        "catID": "@increment"
                    },
                    {
                        "name": "侧栏导航三",
                        "catID": "@increment"
                    },
                    {
                        "name": "侧栏导航四",
                        "catID": "@increment"
                    },
                    {
                        "name": "侧栏导航五",
                        "catID": "@increment"
                    },
                    {
                        "name": "侧栏导航六",
                        "catID": "@increment"
                    }
                ],
                "newest|6": [
                    {
                        "catName": "@pick(['说唱音乐', '古典歌曲', '爵士歌曲', '经典歌曲', '流行歌曲', '乡村歌曲', '民谣歌曲'])",
                        "catID": "@increment",
                        "daoName": "@csentence(10, 20)",
                        "daoJing": "音频出自某某某",
                        "daoDate": "@datetime('MM月dd日')",
                        "uID": "@increment"
                    }
                ],
                "recommend|6": [
                    {
                        "catName": "@pick(['说唱音乐', '古典歌曲', '爵士歌曲', '经典歌曲', '流行歌曲', '乡村歌曲', '民谣歌曲'])",
                        "catID": "@increment",
                        "daoName": "@csentence(10, 20)",
                        "daoJing": "音频出自某某某",
                        "daoDate": "@datetime('MM月dd日')",
                        "uID": "@increment"
                    }
                ],
                "hottest|6": [
                    {
                        "catName": "@pick(['说唱音乐', '古典歌曲', '爵士歌曲', '经典歌曲', '流行歌曲', '乡村歌曲', '民谣歌曲'])",
                        "catID": "@increment",
                        "daoName": "@csentence(10, 20)",
                        "daoJing": "音频出自某某某",
                        "daoDate": "@datetime('MM月dd日')",
                        "uID": "@increment"
                    }
                ],
                "daily": {
                    "catID": "@increment",
                    "list|4": [
                        {
                            "daoName": "@csentence(10, 20)",
                            "daoJing": "音频出自某某某",
                            "daoDate": "@datetime('MM月dd日')",
                            "uID": "@increment"
                        }
                    ]
                },
                "sunday": {
                    "catID": "@increment",
                    "list|4": [
                        {
                            "daoName": "@csentence(10, 20)",
                            "daoJing": "音频出自某某某",
                            "daoDate": "@datetime('MM月dd日')",
                            "uID": "@increment"
                        }
                    ]
                },
                "testimony": {
                    "catID": "@increment",
                    "src": "@image('250x80', '#03a9f4', '#fff', 'Mock.js')"
                },
                "wechat": {
                    "src": "@image('250x120', '#03a9f4', '#fff', 'Mock.js')"
                }
            }
        },
        // 栏目页api
        "GET /api/category/:id": {
            "info": {
                "summary": "栏目页api",
                "module": "栏目页api",
                "description": "",
                "author": "Joseph"
            },
            "response": {
                "category": {
                    "catID": "@increment",
                    "catName": "@cword(3,12)",
                    "src": "@image('1070x120', '#50B347', '#000', 'Mock-category.js')",
                    "list|12": [
                        {
                            "daoName": "@csentence(10, 20)",
                            "daoJing": "音频出自某某某",
                            "daoDate": "@datetime('MM月dd日')",
                            "uID": "@increment",
                            "duration": 2400000,
                            "speaker": "@cword(3)"
                        }
                    ]
                }
            }
        },
        // 详情页api
        "GET /api/detail": {
            "info": {
                "summary": "详情页api",
                "module": "详情页api",
                "description": "",
                "author": "Joseph"
            },
            "request": {
                "querystring": {
                    "*did": "",
                    "*catid": ""
                }
            },
            "response": {
                "detail": {
                    "catID": "@increment",
                    "catName": "@cword(3,12)",
                    "src": "@image('1070x120', '#50B347', '#000', 'Mock-category.js')",
                    "daoName": "@csentence(10, 20)",
                    "daoJing": "音频出自某某某",
                    "daoDate": "@datetime('MM月dd日')",
                    "uID": "@increment",
                    "duration": 2400000,
                    "speaker": "@cword(3)",
                    "url": "@url('http')",
                    "daily": {
                        "catID": "@increment",
                        "list|4": [
                            {
                                "daoName": "@csentence(10, 20)",
                                "daoJing": "音频出自某某某",
                                "daoDate": "@datetime('MM月dd日')",
                                "uID": "@increment"
                            }
                        ]
                    },
                    "sunday": {
                        "catID": "@increment",
                        "list|4": [
                            {
                                "daoName": "@csentence(10, 20)",
                                "daoJing": "音频出自某某某",
                                "daoDate": "@datetime('MM月dd日')",
                                "uID": "@increment"
                            }
                        ]
                    }
                }
            }
        },
        // 评论api
        "GET /api/comments": {
            "info": {
                "summary": "评论api",
                "module": "评论api",
                "description": "",
                "author": "Joseph"
            },
            "request": {
                "querystring": {
                    "*did": "",
                    "*catid": "",
                    "page": 0
                }
            },
            "response": {
                "comments": {
                    "catID": "@increment",
                    "total": "25",
                    "currentPage": "1",
                    "uID": "",
                    "list|5": [
                        {
                            "uName": "@cword(3)",
                            "cDate": "@datetime('MM月dd日')",
                            "cTexts": "@csentence(10, 40)"
                        }
                    ]
                }
            }
        }
    }
}